<%= form_for @new, :validate => true, :url => {:action => 'create'}, :html => { :multipart => true } do |f| %>
    <div class="row-fluid">
      <div class="span3">
        <%= f.label :picture %>
        <%= f.file_field :picture, :maxlength => 64, :tabindex => 1 %>

        <%= f.label :title %>
        <%= f.text_field :title, :size => 31, :tabindex => 2 %>
        <%= f.label :text %>
        <%= f.text_area :text, :size => '30x10', :tabindex => 3 %>
      </div>
    </div>
    <%= content_tag :button, t(:save), :tabindex => 4 %>
<% end %>